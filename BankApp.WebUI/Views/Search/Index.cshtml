@model BankApp.Application.Customers.Queries.GetCustomersListSearch.GetCustomersListSearchViewModel

<div class="row">
    <div class="col s12">
        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Birthdate</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            <a asp-route="customer_details" asp-route-customerid="@item.CustomerId">@item.CustomerId</a>
                        </td>
                        <td>
                            <a asp-route="customer_details" asp-route-customerid="@item.CustomerId">@item.Givenname @item.Surname</a>
                        </td>
                        <td>
                            @item.Birthday.Value.ToShortDateString()
                        </td>
                        <td>
                            @($"{item.Streetaddress}, {item.Zipcode} {item.City} - {item.Country}")
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @await Html.PartialAsync("_SearchNavigation", Model)

    </div>
</div>