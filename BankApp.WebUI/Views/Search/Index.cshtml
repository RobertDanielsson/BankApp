@model BankApp.Application.Customers.Queries.GetCustomersListSearch.CustomersListViewModel
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging


<div class="row">
    <div class="col s12">
        <form method="get" asp-controller="search" asp-action="index">
            <input name="searchInput" class="form-control" placeholder="filter" />
            <button type="submit" class="btn btn-info">Search</button>
            <div asp-validation-summary="All">

            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col s12">

        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Birthdate</th>
                    <td>Address</td>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.CustomerId, "ViewCustomer", "Customer", new { customerId = item.CustomerId })

                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "ViewCustomer", "Customer", new { customerId = item.CustomerId })
                        </td>
                        <td>@item.Birthdate</td>
                        <td>@($"{item.Streetaddress}, {item.Zipcode} {item.City} - {item.Country}")</td>
                    </tr>
                }
            </tbody>
        </table>

        <form asp-controller="Search" asp-action="index" asp-route-searchInput="@Model.SearchInput" method="get">
            <vc:pager paging-list="@Model.Customers"></vc:pager>
            <input type="hidden" name="searchInput" value="@Model.SearchInput" />
        </form>

    </div>
</div>