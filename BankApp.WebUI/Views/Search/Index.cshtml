@model BankApp.Application.Customers.Queries.GetCustomersListSearch.CustomersListViewModel
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging



<div class="row">
    <div class="col s12">

        <table class="striped responsive-table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Birthdate</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.CustomerId, "Index", "Customer", new { customerId = item.CustomerId })

                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "Index", "Customer", new { customerId = item.CustomerId })
                        </td>
                        <td>
                        @item.Birthdate
                        </td>
                        <td>
                        @($"{item.Streetaddress}, {item.Zipcode} {item.City} - {item.Country}")
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <form asp-controller="Search" asp-action="index" asp-route-search="@Model.Search" method="get">
            <vc:pager paging-list="@Model.Customers"></vc:pager>
            <input type="hidden" name="search" value="@Model.Search" />
        </form>

    </div>
</div>