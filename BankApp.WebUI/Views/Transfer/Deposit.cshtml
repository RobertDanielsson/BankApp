@model BankApp.Application.Accounts.Queries.GetAccountTransferData.GetAccountTransferDataViewModel

@{ 
    ViewData["Title"] = $"Deposit [{Model.Customer.Name}]";
}

<div class="row">
    <div class="col s12">
        <form onsubmit="return validateMyForm();" asp-route="customer_deposit" method="post">
            <div class="row">
                <div class="z-depth-1 col s12 m6 pb10 offset-m3">
                    <h6>Select an account and amount</h6>
                    <select name="AccountId" asp-items="Model.Accounts"></select>
                    <input id="amount" name="Amount" placeholder="Amount" />
                    <input type="hidden" value="@Model.Customer.CustomerId" />
                    <button class="waves-effect waves-light btn" type="submit">Deposit</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div asp-validation-summary="All" class="col m5 offset-m3">
                <div>
                    <ul>
                        <li id="valLi"></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 center">
                <a asp-route="customer_details" asp-route-customerId="@Model.Customer.CustomerId" class="waves-effect waves-light btn">Go back</a>
            </div>
        </div>
    </div>
</div>

<script defer src="~/js/NegativeCheckOnSubmit.js"></script>