@model BankApp.WebUI.Models.RegisterViewModel

@{ 
    ViewData["Title"] = "Register employee";
}

<div class="row">
    <div class="col s12">
        <form method="post" asp-controller="Account" asp-action="Register" autocomplete="off">
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">email</i>
                    <label for="Email">Email</label>
                    <input required type="text" asp-for="@Model.Email" id="Email">
                    <div class="validation_text">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">contact_phone</i>
                    <label class="active" asp-for="PhoneNumber">Phone number</label>
                    <input asp-for="@Model.PhoneNumber">
                    <div class="validation_text">
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">vpn_key</i>
                    <label class="active" asp-for="Password">Password</label>
                    <input required type="password" asp-for="@Model.Password">
                    <div class="validation_text">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="input-field col s12 m6">
                    <i class="material-icons prefix">vpn_key</i>
                    <label class="active" asp-for="ConfirmPassword">Confirm password</label>
                    <input required type="password" asp-for="@Model.ConfirmPassword">
                    <div class="validation_text">
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">list</i>
                    <select required asp-for="@Model.RoleId" asp-items="@Model.RoleList"></select>
                </div>
                <div class="col s6"></div>
                <div class="input-field center col s12">
                    <button type="submit" class="waves-effect waves-light btn">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}