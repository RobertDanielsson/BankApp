@model BankApp.WebUI.Models.RegisterViewModel

<div class="container">
    <div class="row">
        <div class="col s12">
            <form method="post" asp-controller="Account" asp-action="Register" autocomplete="off">
                <div class="row">
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">face</i>
                            <label for="FirstName">Firstname</label>
                            <input type="text" id="FirstName" asp-for="@Model.FirstName">
                            <div class="validation_text">
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">face</i>
                            <label for="LastName">Lastname</label>
                            <input type="text" asp-for="@Model.LastName" id="LastName">
                            <div class="validation_text">
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">email</i>
                            <label for="Email">Email</label>
                            <input type="text" asp-for="@Model.Email" id="Email">
                            <div class="validation_text">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    <div class="col s12 m12"></div>
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">vpn_key</i>
                            <label class="active" for="Password">Password</label>
                            <input type="password" asp-for="@Model.Password" placeholder="">
                            <div class="validation_text">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="input-field col s12 m6">
                            <i class="material-icons prefix">vpn_key</i>
                            <label class="active" for="Password">Confirm password</label>
                            <input type="password" asp-for="@Model.ConfirmPassword" placeholder="">
                            <div class="validation_text">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">list</i>
                        <select asp-for="@Model.RoleId" asp-items="@Model.RoleList"></select>
                    </div>
                    <div class="col s12">
                        <div class="input-field center">
                            <button type="submit" class="waves-effect waves-light btn">Register</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

