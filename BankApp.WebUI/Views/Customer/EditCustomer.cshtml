@model BankApp.Application.Customers.Commands.EditCustomer.EditCustomerCommand

<div class="row">
    <form class="col s12" asp-route="customer_edit" method="post">
        <div class="row">
            <div class="input-field col s12 m5">
                <input required asp-for="@Model.Givenname" type="text" class="validate">
                <label asp-for="@Model.Givenname">First Name</label>
                <span asp-validation-for="@Model.Givenname"></span>
            </div>
            <div class="input-field col s12 m5">
                <input required asp-for="@Model.Surname" type="text" class="validate">
                <label asp-for="@Model.Surname">Last Name</label>
                <span asp-validation-for="@Model.Surname"></span>
            </div>
            <div class="input-field col s12 m2">
                <select required name="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Sonic" disabled>Sonic the hedgehog</option>
                </select>
                <label>Gender</label>
                <span asp-validation-for="@Model.Gender"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m4">
                <input required asp-for="@Model.Streetaddress" type="text" class="validate">
                <label asp-for="@Model.Streetaddress">Street address</label>
                <span asp-validation-for="@Model.Streetaddress"></span>
            </div>
            <div class="input-field col s12 m4">
                <input required asp-for="@Model.City" type="text" class="validate">
                <label asp-for="@Model.City">City</label>
                <span asp-validation-for="@Model.City"></span>
            </div>
            <div class="input-field col s12 m4">
                <input required asp-for="@Model.Zipcode" type="text" class="validate">
                <label asp-for="@Model.Zipcode">Zipcode</label>
                <span asp-validation-for="@Model.Zipcode"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <input required asp-for="@Model.Country" type="text" class="validate">
                <label asp-for="@Model.Country">Country</label>
                <span asp-validation-for="@Model.Country"></span>
            </div>
            <div class="input-field col s12 m6">
                <input required asp-for="@Model.CountryCode" type="text" class="validate">
                <label asp-for="@Model.CountryCode">Country code</label>
                <span asp-validation-for="@Model.CountryCode"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <input asp-for="@Model.Birthday" type="date" class="validate">
                <label asp-for="@Model.Birthday">Birthdate</label>
                <span asp-validation-for="@Model.Birthday"></span>
            </div>
            <div class="input-field col s12 m6">
                <input asp-for="@Model.NationalId" type="text" class="validate">
                <label asp-for="@Model.NationalId">National id</label>
                <span asp-validation-for="@Model.NationalId"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m5">
                <input asp-for="@Model.Emailaddress" type="email" class="validate">
                <label asp-for="@Model.Emailaddress">Email</label>
                <span asp-validation-for="@Model.Emailaddress"></span>
            </div>
            <div class="input-field col s12 m2">
                <input asp-for="@Model.Telephonecountrycode" type="text" class="validate">
                <label asp-for="@Model.Telephonecountrycode">(tel) Country code</label>
                <span asp-validation-for="@Model.Telephonecountrycode"></span>
            </div>
            <div class="input-field col s12 m5">
                <input asp-for="@Model.Telephonenumber" type="text" class="validate">
                <label asp-for="@Model.Telephonenumber">Phone number</label>
                <span asp-validation-for="@Model.Telephonenumber"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s12 center">
                <button type="submit" class="waves-effect waves-light btn">Update customer</button>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}