<!DOCTYPE html>

<html>
<head>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/helpers.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
    <header>
        <partial name="_Navbar" />
        @*<nav>
            <div class="nav-wrapper teal">
                <a href="#" class="brand-logo ml20">SBS BANK</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a asp-route="customer_create">Create customer</a></li>
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                </ul>
            </div>
        </nav>*@
    </header>
    <div class="container">
        <partial name="_StatusMessages" />
        <div class="row">
            <div class="col m3"></div>
            <div class="col s12 m6">
                <div class="nav-wrapper">
                    <form method="get" asp-controller="search" asp-action="index">
                        <input type="search" name="search" class="form-control" placeholder="Search by customer id, first name or city" />
                        <button type="submit" class="btn btn-info">Search</button>
                    </form>
                </div>
            </div>
            <div class="col m3"></div>
        </div>

        <main role="main">
            <div class="row">
                <div class="col s12">
                    <h5 class="center page-title">@ViewData["Title"]</h5>
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted center">
        <div class="container">
            &copy; 2019 - BankApp Robert Danielsson
        </div>
    </footer>
</body>
</html>
